<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/grey"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/player1score"
        android:layout_width="67dp"
        android:layout_height="55dp"
        android:text="Player 1's Score:"

        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/player2score"
        android:layout_width="67dp"
        android:layout_height="55dp"
        android:text="Player 2's Score:"

        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totalgames"
        android:layout_width="67dp"
        android:layout_height="55dp"
        android:text="Total number of Games:"

        android:textSize="25sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/drawmatches"
        android:layout_width="67dp"
        android:layout_height="55dp"
        android:text="Number of matches Tied:"

        android:textSize="25sp"
        android:textStyle="bold" />




    <TableRow
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:layout_marginLeft="5pt"
            android:background="@color/colourdefault"
            android:onClick="Buttonclick"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:layout_marginLeft="3pt"
            android:background="@color/colourdefault"
            android:onClick="Buttonclick"
            android:textSize="30sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/button3"
            android:layout_marginLeft="3pt"
            android:textSize="30sp"
            android:textStyle="bold"
            android:onClick="Buttonclick"
            android:background="@color/colourdefault"
            android:layout_width="118dp"
            android:layout_height="118dp"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="3pt"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="118dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@color/colourdefault"
            android:onClick="Buttonclick"
            android:layout_marginLeft="5pt"
            android:layout_height="118dp"
             />
        <Button
            android:id="@+id/button5"
            android:layout_width="118dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:onClick="Buttonclick"
            android:background="@color/colourdefault"
            android:layout_marginLeft="3pt"
            android:layout_height="118dp"
             />
        <Button
            android:id="@+id/button6"
            android:layout_width="118dp"
            android:onClick="Buttonclick"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="3pt"
            android:background="@color/colourdefault"
            android:layout_height="118dp"
           />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="3pt"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button7"
            android:onClick="Buttonclick"
            android:layout_width="118dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@color/colourdefault"
            android:layout_marginLeft="5pt"
            android:layout_height="118dp"
          />
        <Button
            android:id="@+id/button8"
            android:layout_width="118dp"
            android:onClick="Buttonclick"
            android:layout_marginLeft="3pt"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@color/colourdefault"
            android:layout_height="118dp"
          />
        <Button
            android:id="@+id/button9"
            android:layout_width="118dp"
            android:layout_marginLeft="3pt"
            android:textSize="30sp"
            android:textStyle="bold"
            android:onClick="Buttonclick"
            android:background="@color/colourdefault"
            android:layout_height="118dp"
            />
    </TableRow>

</TableLayout>